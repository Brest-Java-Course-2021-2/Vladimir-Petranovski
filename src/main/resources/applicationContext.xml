<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="requestController"
          class="com.epam.brest.autobase.controllers.RequestController"
          init-method="initMethod"
          destroy-method="destroyMethod">
    </bean>
    <bean id="driverController"
    class="com.epam.brest.autobase.controllers.DriverController"
          init-method="initMethod"
          destroy-method="destroyMethod">

    </bean>
    <bean id="carController"
          class="com.epam.brest.autobase.controllers.CarController"
          init-method="initMethod"
          destroy-method="destroyMethod">

    </bean>
    <bean id="autobaseController"
          class="com.epam.brest.autobase.controllers.AutobaseController"
          init-method="initMethod"
          destroy-method="destroyMethod">

    </bean>
    <bean id="carService"
          class="com.epam.brest.autobase.services.CarService"
          init-method="initMethod"
          destroy-method="destroyMethod">

    </bean>
    <bean id="driverService"
          class="com.epam.brest.autobase.services.DriverService"
          init-method="initMethod"
          destroy-method="destroyMethod">

    </bean>
    <bean id="requestService"
          class="com.epam.brest.autobase.services.RequestService"
          init-method="initMethod"
          destroy-method="destroyMethod">

    </bean>
</beans>